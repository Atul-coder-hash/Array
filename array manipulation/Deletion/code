#include<iostream>
using namespace std;

void deletion(int a[],int index,int size)
{int i;
    for(i=index;i<size;i++)
    {
        a[i]=a[i+1];

    }
    size--;


}
void print(int a[],int size)
{
for(int i=0;i<size;i++)
{
    cout<<a[i];
}
}

int main()
{int a[]={1,4,8,4,3};
int size= 5;
int index;
cout<<"enter the index of deleting element:-";
cin>>index;
deletion(a,index,size);
print(a,size);

}
